<%- include('partials/header') %>

    <div class="container justify-content-center mt-5">
        <div class="row justify-content-center mt-4">

        
            <div class="card shadow justify-content-center col-8" style="border-radius: .5rem;">
                
                <div class="row g-0 justify-content-center">
                    <div class="col-md-4 text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp" alt="avatar" class="img-fluid my-5" style="width: 80px;">
                        <h5><%=presentuser.username%></h5>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body p-4">
                            <h6>Information</h6>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-6 mb-3">
                                    <h6>First Name</h6>
                                    <p class="text-muted"><%= PUD.firstname%></p>
                                    
                                </div>
                                <div class="col-6 mb-3">
                                    <h6>Last Name</h6>
                                    <p class="text-muted"><%= PUD.lastname %></p>
                                </div>
                            </div>
                            <h6>Others</h6>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-6 mb-3">
                                    <h6>Email</h6>
                                    <p class="text-muted"><%= PUD.email%></p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h6>Phone</h6>
                                    <p class="text-muted"><%= PUD.phonenumber %></p>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

<%- include('partials/footer') %>